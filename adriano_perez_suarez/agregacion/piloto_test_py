#Agregacion

from adriano_perez_suarez.agregacion.piloto import Avion


def test_atributo_avion():
    avion = Avion("Boeing 737")
    assert avion.modelo == "Boeing 737"

def test_agregar_pilotos():
    avion = Avion("Airbus A330")
    
    p1 = Piloto("Capitán", 15000) # type: ignore
    p2 = Piloto("Primer Oficial", 4500) # type: ignore

    avion.agregar_piloto(p1)     
    avion.agregar_piloto(p2)

    assert len(avion.pilotos) == 2
    assert avion.pilotos[0].rango == "Capitán"
    assert avion.pilotos[0].horas_vuelo == 15000

def test_instancia_avion():
    avion = Avion("F-16 Fighting Falcon")
    assert isinstance(avion, Avion)